    <script>
        var student_id=prompt("Enter the student id:");
        var name=prompt("Enter the name:");
        var mark1=parseInt(prompt("Enter the first mark:"));
        var mark2=parseInt(prompt("Enter the second mark:"));
        var mark3=parseInt(prompt("Enter the third mark:"));
        var mark4=parseInt(prompt("Enter the fourth mark:"));
        var mark5=parseInt(prompt("Enter the fifth mark:"));
        var mark6=parseInt(prompt("Enter the sixth mark:"));
        var total=mark1+mark2+mark3+mark4+mark5+mark6;
        var average=total/6;
        document.write("Student id: " +student_id);
        document.write("<br>");
        document.write("Student name: " +name);
        document.write("<br>");
        document.write("First mark: " +mark1);
        document.write("<br>");
        document.write("Second mark: " +mark2);
        document.write("<br>");
        document.write("Third mark: " +mark3);
        document.write("<br>");
        document.write("Fourth mark: " +mark4);
        document.write("<br>");
        document.write("Fifth mark: " +mark5);
        document.write("<br>");
        document.write("Sixth mark: " +mark6);
        document.write("<br>");
        document.write("Total: " +total);
        document.write("<br>");
        document.write("Average: " +average);
    </script>
